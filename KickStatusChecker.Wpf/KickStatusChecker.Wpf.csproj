<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>KickStatusChecker.Wpf</RootNamespace>
    <AssemblyName>KickStatusChecker.Wpf</AssemblyName>
    <AssemblyTitle>Kick Stream Monitor</AssemblyTitle>
    <AssemblyDescription>A desktop application for monitoring Kick stream status</AssemblyDescription>
    <AssemblyCompany>KickStatusChecker</AssemblyCompany>
    <AssemblyProduct>Kick Stream Monitor</AssemblyProduct>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <StartupObject>KickStatusChecker.Wpf.App</StartupObject>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\KickStatusChecker\KickStatusChecker.csproj" />
  </ItemGroup>

</Project>
